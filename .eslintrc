{
  "extends": ["prettier-standard"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["./tsconfig.json", "./packages/*/tsconfig.json"]
      },
      "plugins": ["@typescript-eslint"],
      "extends": [
        "prettier-standard",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ]
}
